{
  "compilerOptions": {
    "skipLibCheck": true,
    "noImplicitAny": false,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": "../",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": true
  },
  "include": ["../src/**/*.ts", "../src/**/*.d.ts", "../src/**/*.tsx", "../src/**/*.vue", "../env.d.ts"]
}